root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.java]
# IntelliJ에게 이 프로젝트가 AOSP(4칸) 스타일임을 명시
ij_java_aosp_style = true
ij_java_doc_add_blank_line_after_description = true
ij_java_doc_align_param_comments = false